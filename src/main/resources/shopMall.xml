<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="ColinS" class="com.gaidukevich.ibaWinter2019.shopingMoll.ShopPoint" scope="prototype">
        <constructor-arg index="0" value="ColinShop"/>
        <constructor-arg index="1" value="clothes"/>
    </bean>

    <bean name="SportMaster" class="com.gaidukevich.ibaWinter2019.shopingMoll.ShopPoint" scope="prototype">
        <constructor-arg index="0" value="SportMasterShop"/>
        <constructor-arg index="1" value="sportClothes"/>
    </bean>

    <bean name="shoppingMall" class="com.gaidukevich.ibaWinter2019.shopingMoll.ShoppingMall">
        <constructor-arg index="0" value="Europa"/>
        <constructor-arg index="1">
            <list>
                <ref bean="ColinS"/>
                <ref bean="SportMaster"/>
            </list>
        </constructor-arg>
        <constructor-arg index="2" value="1500"/>
    </bean>

    <bean name="shopService" class="com.gaidukevich.ibaWinter2019.shopingMoll.ShoppingService" init-method="openShoppingMall">
        <property name="shoppingMall" ref="shoppingMall"/>
    </bean>

</beans>